code = "shader_type canvas_item;

uniform float max_off = 0.1f;
uniform float percent;

void fragment(){
	vec2 changed_uv = UV;
	changed_uv.y += max_off * clamp(percent-UV.x,0f,1f);
	COLOR = texture(TEXTURE,changed_uv);
	COLOR.a *= 1f-clamp(percent-UV.x,0f,1f);
}"

